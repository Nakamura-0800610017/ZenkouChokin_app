<div class="row justify-content-center">
  <div class="col-12 col-lg-10 col-xl-10">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <h3 class="card-title mb-0"><%= t(".title") %></h3>
      </div>

      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-striped table-bordered align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th><%= t(".content") %></th>
                <th><%= t(".author") %></th>
                <th><%= t(".edit_destroy") %></th>
              </tr>
            </thead>
            <tbody>
              <% @famous_quotes.each do |famous_quote| %>
                <tr>
                  <td class="text-truncate" style="max-width: 300px;"><%= famous_quote.content %></td>
                  <td><%= famous_quote.author %></td>
                  <td>
                    <%= link_to edit_admin_famous_quote_path(famous_quote), id: "button-edit-#{famous_quote.id}" do %>
                      <i class="bi bi-pencil-fill"></i>
                    <% end %>
                    <%= link_to admin_famous_quote_path(famous_quote), id: "button-delete-#{famous_quote.id}", data: { turbo_method: :delete, turbo_confirm: t('default.delete_confirm') } do %>
                      <i class="bi bi-trash-fill"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card-footer">
        <%= paginate @famous_quotes, theme: 'bootstrap-5' %>
      </div>
    </div>
  </div>
</div>