<div class="row justify-content-center">
  <div class="col-12 col-lg-10 col-xl-8">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <h3 class="card-title mb-0"><%= t(".title") %></h3>
      </div>

        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle mb-0">
              <thead class="table-light">
                <tr>
                <th><%= t(".body") %></th>
                <th><%= t(".post_type") %></th>
                <th><%= t(".point") %></th>
                <th><%= t(".user") %></th>
                <th><%= t(".edit_destroy") %></th>
                </tr>
              </thead>
              <tbody>
                <% @posts.each do |post| %>
                  <tr>
                    <td class="text-truncate" style="max-width: 300px;"><%= post.body %></td>
                    <td><%= post.post_type %></td>
                    <td><%= post.point %></td>
                    <td><%= post.user.user_name %></td>
                    <td>
                      <%= link_to edit_admin_post_path(post), id: "button-edit-#{post.id}" do %>
                        <i class="bi bi-pencil-fill"></i>
                      <% end %>
                      <%= link_to admin_post_path(post), id: "button-delete-#{post.id}", data: { turbo_method: :delete, turbo_confirm: t('default.delete_confirm') } do %>
                        <i class="bi bi-trash-fill"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

      <div class="card-footer">
        <%= paginate @posts, theme: 'bootstrap-5' %>
      </div>
    </div>
  </div>
</div>