<div class="container">
  <div class="row">
    <div class=" col-md-10 col-lg-5 mx-auto">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @user, url: password_reset_path(@token) do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= @user.email %>
        </div>
        <div class="mb-3">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
        <div class="d-flex flex-column w-75 mx-auto gap-2">
          <%= f.submit t('password_resets.edit.submit'), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
