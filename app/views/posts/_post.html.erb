<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
  <div id="post-id-<%= post.id %>">
    <div class="card text-center custom-card">
      <div class="card-body content-box p-3">
        <p class="card-text"><%= post.body %></p>
      </div>
      <div class="d-flex align-items-center p-1">
        <div><i class="bi bi-person-fill"></i></div>
        <div class="ms-2"><%= post.user.user_name %></div>
        <div class="ms-auto">ユーザーランク表示部</div>
      </div>
      <% if current_user&.own?(post) %>
        <div class="ms-auto p-1">
          <%= link_to edit_post_path(post), id: "button-edit-#{post.id}" do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
          <%= link_to post_path(post), id: "button-delete-#{post.id}", data: { turbo_method: :delete, turbo_confirm: t('default.delete_confirm') } do %>
            <i class="bi bi-trash-fill"></i>
          <% end %>
        </div>
      <% else %>
        <div class="ms-auto me-1 p-1">
          <i class="bi bi-star"></i>
        </div>
      <% end %>
    </div>
  </div>
</div>