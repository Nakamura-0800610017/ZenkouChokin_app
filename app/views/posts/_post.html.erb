<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
  <div id="post-id-<%= post.id %>">
    <div class="card h-100 text-center custom-card">
      <div class="card-body content-box p-3 mb-3">
        <p class="card-text"><%= post.body %></p>
      </div>
      <div class="d-flex">
        <div class="p-2"><i class="bi bi-person-fill"></i></div>
        <div class="p-2 mx-auto"><%= post.user.user_name %></div>
        <div class="p-2 ms-auto"><p>ユーザーランク表示部</p></div>
      </div>
      <% if current_user.own?(post) %>
        <div class='ms-auto'>
          <%= link_to '#', id: "button-edit-#{post.id}" do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
          <%= link_to '#', id: "button-delete-#{post.id}", data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') } do %>
            <i class="bi bi-trash-fill"></i>
          <% end %>
        </div>
      <% else %>
        <%= render '#', { post: post } %>
      <% end %>
    </div>
  </div>
</div>