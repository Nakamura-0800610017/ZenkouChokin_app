<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-5 mx-auto">
      <h1><%= t('posts.new.title') %></h1>
        <%= render 'shared/error_messages', object: @post %>
        <%= form_with model: @post, class: "new_post" do |f| %>
          <div data-controller="post-points">
            <div class="mb-3">
              <%= f.label :post_type, class: "form-label" %>
              <%= f.select :post_type,
                  options_for_select([["善行", "zenkou"], ["悪行", "akugyou"]], @post.post_type), {},
                  { class: "form-select", id: "type_select_box",
                  data: { action: "change->post-points#update", "post-points-target": "type" } } %>
            </div>
            <div class="mb-3">
              <%= f.label :body, class: "form-label" %>
              <%= f.text_area :body, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :point, class: "form-label" %>
              <%= f.select :point,
                    (1..10).to_a, {},
                    { class: "form-select", id: "point_select_box",
                    data: { "post-points-target": "point" } } %>
            </div>
            <div class="d-flex gap-2">
              <%= f.submit t('posts.new.post'), class: "btn btn-primary ms-auto" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>