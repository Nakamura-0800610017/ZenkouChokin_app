<header>
  <nav class="navbar navbar-expand-lg navbar-light custom-header px-4">
    <div class="mf-auto">
      <%= link_to '/', class: 'navbar-brand ms-auto' do %>
        <%= image_tag 'main_image.png', width: 153 %>
      <% end %>
      <span class="ms-2 lead fw-bold">
        ~日常を見直す週間管理アプリ~
      </span>
    </div>
    <div class="ms-auto fw-bold">
      <ul class="navbar-nav" style="flex-direction: row;">
        <li class="nav-item px-2">
          <button type="button" class="nav-link" data-bs-toggle="modal" data-bs-target="#modal_how_to">
            <%= t('header.how_to') %>
          </button>
        </li>
        <li class="nav-item px-2">
          <%= link_to t('header.ranking'), user_points_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown px-2">
            <%= link_to t('header.post'), '#', class: 'nav-link dropdown-toggle',data: {bs_toggle: 'dropdown'}, aria: {haspopup: 'true', expanded: 'false'} %>
          <ul class="dropdown-menu">
            <li>
              <%= link_to t('header.post_zenkou'), new_zenkou_posts_path, class: "dropdown-item" %>
            </li>
            <li>
              <%= link_to t('header.post_akugyou'), new_akugyou_posts_path, class: "dropdown-item" %>
            </li>
          </ul>
        </li>
        <li class="nav-item px-2">
          <%= link_to t('header.my_page'), user_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item px-2">
          <%= link_to t('header.bookmarks'), bookmarks_posts_path, class: "nav-link" %>
        </li>
        <li class="nav-item px-2">
          <%= button_to t('header.logout'), logout_path, method: :delete, class: "nav-link" %>
        </li>
      </ul>
    </div>
  </nav>
</header>